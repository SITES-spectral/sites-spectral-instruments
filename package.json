{
  "name": "sites-spectral-stations-instruments",
  "version": "13.17.0",
  "description": "SITES Spectral v13.17.0 - Stations & Instruments Registry",
  "main": "src/worker.js",
  "scripts": {
    "dev": "wrangler dev --local --persist-to=.wrangler/state",
    "dev:frontend": "vite",
    "build": "node scripts/build.js",
    "build:bump": "node scripts/build.js --bump-version",
    "build:frontend": "vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run tests/integration",
    "test:unit": "vitest run tests/unit",
    "deploy": "npm run build:frontend && npm run build && wrangler deploy",
    "deploy:bump": "npm run build:frontend && npm run build:bump && wrangler deploy",
    "api:validate": "node scripts/validate-openapi.js",
    "api:docs": "echo 'OpenAPI spec: docs/openapi/openapi.yaml'",
    "prebuild": "npm run api:validate || echo 'OpenAPI validation skipped'",
    "db:create": "wrangler d1 create spectral_stations_db",
    "db:migrate": "wrangler d1 migrations apply spectral_stations_db --remote",
    "db:migrate:local": "wrangler d1 migrations apply spectral_stations_db --local",
    "db:studio": "wrangler d1 studio spectral_stations_db",
    "db:console": "wrangler d1 execute spectral_stations_db --command",
    "populate:phenocams": "node populate_phenocams.js",
    "populate:mspectral": "node populate_mspectral.js",
    "populate:all": "npm run populate:phenocams && npm run populate:mspectral",
    "update-images": "node scripts/update-instrument-images.js",
    "update-images:dry-run": "node scripts/update-instrument-images.js --dry-run"
  },
  "keywords": [
    "sites",
    "spectral",
    "research",
    "stations",
    "instruments",
    "phenocams",
    "multispectral",
    "sensors",
    "authentication",
    "jwt",
    "rbac",
    "crud",
    "cloudflare",
    "workers",
    "d1",
    "sweden"
  ],
  "author": "SITES Spectral Team",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.10.14",
    "@vitest/coverage-v8": "^3.2.4",
    "jsdom": "^27.4.0",
    "vite": "^7.3.0",
    "vitest": "^3.2.4",
    "wrangler": "^4.53.0"
  },
  "dependencies": {
    "jose": "^5.10.0",
    "js-yaml": "^4.1.0",
    "yaml": "^2.8.2"
  }
}
